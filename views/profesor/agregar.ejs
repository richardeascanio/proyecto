  <form action="/profesor/agregar" method="post" accept-charset="utf-8" class="form-singin">
    <section id="registro">
      <div class="container">
        <div class="row">
          <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Añadir profesor</h4>
            <form class="needs-validation" novalidate>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="nombre">Nombre</label>
                  <input type="text" class="form-control" name="nombre" placeholder="" required>
                  <div class="invalid-feedback">
                    Ingrese un nombre valido
                  </div>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="apellido">Apellido</label>
                  <input type="text" class="form-control" name="apellido" placeholder="" required>
                  <div class="invalid-feedback">
                    Ingrese un apellido valido
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="cedula">Cédula</label>
                  <input type="int" class="form-control" name="cedula" placeholder="Numero de cedula" required>
                  <div class="invalid-feedback">
                    Ingrese un numero de cedula valido
                  </div>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="carnet">Carnet</label>
                  <input type="int" class="form-control" name="carnet" placeholder="Numero de carnet" required>
                  <div class="invalid-feedback">
                    Ingrese un numero de carnet valido
                  </div>
                </div>
              </div>
              
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="correo">Email</label>
                  <input type="email" class="form-control" name="correo" placeholder="nombre@correo.com" required>
                  <div class="invalid-feedback">
                    Por favor ingrese una dirección de correo electronico que sea valida
                  </div>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="idDepartamento">ID Departamento</label>
                  <input type="integer" class="form-control" name="idDepartamento" placeholder="ID departamento" required>
                  <div class="invalid-feedback">
                    Por favor ingrese un numero valido
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="fechaingreso">Fecha de Ingreso</label>
                  <input type="date" class="form-control" name="fechaingreso" required>
                  <div class="invalid-feedback">
                    Ingrese una fecha de ingreso valida
                  </div>
                </div>

                <div class="col-md-6 mb-3">
                  <label for="profesion">Profesión</label>
                  <input type="text" class="form-control" name="profesion" placeholder="Profesión" required>
                  <div class="invalid-feedback">
                    Ingrese una profesión valida
                  </div>
                </div>
              </div>

              <label for="sexo">Sexo</label>
              <div class="custom-control custom-radio">
                <input type="radio" id="masculino" name="sexo" class="custom-control-input" value="M" checked required>
                <label class="custom-control-label" for="masculino">Masculino</label>
              </div>
              <div class="custom-control custom-radio">
                <input type="radio" id="femenino" name="sexo" class="custom-control-input" value="F" required>
                <label class="custom-control-label" for="femenino">Femenino</label>
              </div>

              <hr class="mb-4">
              <button class="btn btn-primary btn-lg btn-block" type="submit">Añadir profesor</button>
          </div>
        </div>
